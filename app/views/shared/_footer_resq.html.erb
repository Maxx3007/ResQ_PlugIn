<div class="footer">

  <div class="footer_left">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag("ResQ_Logo_Full_White.png", alt: "Resq Plugin Logo - A Collaborative Plugin") %>
    <% end %>
    <h6>A socially responsible plugin</h6>
  </div>

  <div class="footer_right">

    <div class="footer_top">
      <h4>
        <% if current_user %>
          <%= link_to 'Partnerships', pages_partnerships_path %>
        <% else %>
          <%= link_to 'Partnerships', new_user_registration_path %>
        <% end %>
      </h4>

      <h4>
        <%= link_to "Privacy Policies", pages_privacy_path %>
      </h4>

      <h4>
        <%= link_to "Contact Us", new_message_path %>
      </h4>
    </div>

    <div class="horizontal_footer_line"></div>

    <div class="footer_bottom">
      <div class="footer_bottom_left">
        <h4>
          <%= link_to "About us", pages_about_path %>
        </h4>
      </div>

      <div class="vertical_footer_line"></div>

      <div class="footer_bottom_right">
        <h4>Follow us</h4>
        <%= link_to image_tag("instagram.svg"), "https://www.instagram.com/resq.plugin/", target: '_blank' %>
        <%= link_to image_tag("facebook.svg"), "https://www.facebook.com/resqplugin", target: '_blank' %>
        <%= link_to image_tag("twitter.svg"), "https://twitter.com/ResqPlugin", target: '_blank' %>
        <%= link_to image_tag("linkedin.svg"), "https://www.linkedin.com/company/resq-plugin/", target: '_blank' %>
      </div>
    </div>

  </div>

</div>
